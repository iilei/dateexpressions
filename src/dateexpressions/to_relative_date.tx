Program:
  now=Now?
  statements*=Statement
;

Statement:
  DeltaStatementMonth | DeltaStatement | FloorStatement
;

Now:
  timezone = /now(?:\s*\((?:(?:timezone)=)?(?P<timezone>[^\=)]+)\))?/
;

DeltaStatement: sign=OperationSign value=INT unit=FixedUnit;
DeltaStatementMonth: lax=MonthLaxUnit sign=OperationSign value=INT unit='M';

OperationSign: Add | Sub;

Add: '+';
Sub: '-';

FixedUnit: /([smhdwy])/;
FloorStatement: '/' unit=FixedUnit;
MonthLaxUnit: /\/(~)?M/;

Comment:
  /\/\*.*\*\//
;
